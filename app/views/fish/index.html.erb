<h1>Listing fish</h1>

<table class="table-bordered table-striped table table-hover">
  <tr>
    <th>Family</th>
    <th>Genus</th>
    <th>Species</th>
    <th>English name</th>
    <th>Local name</th>
    <th>Code</th>
    <th></th>
  </tr>

  <% @fish.each do |fish| %>
    <tr>
      <td><%= fish.family %></td>
      <td><%= fish.genus %></td>
      <td><%= fish.species %></td>
      <td><%= fish.english_name %></td>
      <td><%= fish.local_name %></td>
      <td><%= fish.code %></td>
      <td>
        <%= link_to 'Show', fish %>
        <%= link_to 'Edit', edit_fish_path(fish) %>
        <%= link_to 'Destroy', fish, method: :delete, data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
  <% end %>
</table>

<br />

